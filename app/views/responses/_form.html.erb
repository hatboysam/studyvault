<% form_for(@response, :html => {:multipart => true}) do |f| %>
	
	<%= f.error_messages %>
	
	<div class = "field">
		<%= f.label(:description, "File Description") %><br />
		<%= f.text_area :description, :class => "round" %>
	</div>
	
	<%= f.hidden_field(:request_id, :value => @request.id )%>
	<%= f.hidden_field(:user_id, :value => current_user.id )%>
	
	<div class = "field">
		<%= f.label(:linked, "Response File") %><br />
		<div class = "uploadbutton">
			<%= f.file_field(:linked) %>
		</div>
	</div>
	
	<% fields_for @upload do |fu| %>
		<%= fu.hidden_field(:stars, :value => 0 )%>
		<%= fu.hidden_field(:ratings, :value => 0 )%>
	<% end %>
	
	<div class="actions" id = "spintarget">
    	<%= f.submit "Submit" %>
  	</div>

	<div id = "forspinner">
	
	</div>
	
<% end %>
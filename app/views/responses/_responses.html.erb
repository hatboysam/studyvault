<% if responses.size != 0 %>
	<table class="table table-striped">
			<tr>
				<th class="center">
					Download
				</th>
				<th class="center">
					Type
				</th>
				<th>Name</th>
				<th>Description</th>
				<th>Actions</th>
			</tr>
			<%= render 	:partial => "responses/response", 
							:collection => responses %>
	</table>
<% else %>
	No responses yet...
<% end %>
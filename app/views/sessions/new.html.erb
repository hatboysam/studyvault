<h2>Sign In</h2>

<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "Sign in", :class => "btn btn-success" %>
  </div>
<% end %>

<p>Need an account? <%= link_to "Sign up!", signup_path %></p>
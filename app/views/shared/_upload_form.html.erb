<% form_for(@upload, :html => {:multipart => true}) do |f| %>
	<div class = "field">
		<%= f.label(:semester, "Semester") %><br />
		<%= f.select(:semester, options_for_select([["Fall","Fall"],["Spring","Spring"],["Summer","Summer"]])) %>
	</div>
	<div class = "field">
		<%= f.label(:year, "Year") %><br />
		<%= date_select :upload, :year, :start_year => 1980, :end_year => Time.now.year, :discard_month => true %>
	</div>
	<div class = "field">
		<%= f.label(:course_name, "Course Name") %><br />
		<%= f.text_field :course_name %>
	</div>
	<div class = "field">
		<%= f.label(:professor, "Professor") %><br />
		<%= f.text_field :professor %>
	</div>
	
	<div class = "field">
		<%= f.label(:description, "File Description") %><br />
		<%= f.text_area :description, :class => "round" %>
	</div>
	
	<%= f.hidden_field(:stars, :value => '0' )%>
	<%= f.hidden_field(:ratings, :value => '0' )%>
	<%= f.hidden_field(:school_id, :value => current_user.school.id )%>
	
	<div class = "field upload">
		<%= f.label(:linked, "Upload File") %><br />
		<%= f.file_field(:linked) %>
	</div>
	
	<div class="actions" id = "spintarget">
    	<%= f.submit "Submit" %>
  	</div>

	<div id = "forspinner">
	
	</div>
	
<% end %>
<span class = "downloadicon">
	<a target="_blank" class="downloadlink" href=<%= "/uploads/#{upload.id}/download" %>>
		<i class="icon-cloud-download icon-large"></i>
		<br />
		<small>
			<% if signed_in? %>
				<% if upload.user_id == current_user.id || current_user.has_downloaded?(upload) %>
					FREE
				<% else %>
					1 CR
				<% end %>
			<% else %>
				1 CR
			<% end %>
		</small>
	</a>
</span>
<% if uploads.size != 0 %>
	<table class="table table-striped">
			<tr>
				<th class="center">
					Download
				</th>
				<th class="center">
					Type
				</th>
				<th>Name</th>
				<th class="center">
					Rating
				</th>
				<th>Course</th>
				<th>Semester</th>
				<th>Professor</th>
				<th>Actions</th>
			</tr>
			<% if downloads == true %>
				<%= render 	:partial => "downloads/download", 
							:collection => uploads %>
			<% else %>
				<%= render 	:partial => "uploads/upload", 
							:collection => uploads %>
			<% end %>
	</table>
<% else %>
	No files
<% end %>